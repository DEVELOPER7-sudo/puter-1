{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "../src/*": ["../src/*"]
    },
    "typeRoots": ["../node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "*.d.ts"
  ]
}